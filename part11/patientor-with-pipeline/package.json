{
  "name": "patientor-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for Patientor frontend and backend",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "cd client && vite",
    "build:frontend": "cd client && tsc --build && vite build",
    "lint:frontend": "eslint client --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview:frontend": "cd client && vite preview",
    "dev:backend": "ts-node-dev --project server/tsconfig.json server/index.ts",
    "build:backend": "tsc --build server",
    "lint:backend": "eslint --ext .ts server",
    "start": "node server/build/server/index.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npm run build:frontend && npm run build:backend",
    "lint": "npm run lint:frontend && npm run lint:backend"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.14.12",
    "@mui/material": "^5.16.4",
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3",
    "vite": "^4.4.5"
  }
}
