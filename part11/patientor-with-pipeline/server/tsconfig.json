{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "../",
    "composite": true
  },
  "include": ["./**/*", ".eslintrc.js", "../data/**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
